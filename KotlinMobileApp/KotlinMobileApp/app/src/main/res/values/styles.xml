<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RobotoThin">
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>
    <style name="RobotoLight">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="RobotoNormal">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="RobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Heading1" parent="@style/RobotoLight">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">fill</item>
    </style>

    <style name="Heading2" parent="@style/RobotoNormal">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStylePrimary" parent="@style/RobotoRegular">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:radius">5dp</item>
        <item name="android:backgroundTint">@color/colorPrimaryButton</item>
    </style>

    <style name="ButtonStyleSecondary" parent="@style/ButtonStylePrimary">
        <item name="android:backgroundTint">@color/button_highlight_state</item>
        <item name="android:textColor">@color/button_text_change_state</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="DotViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:src">@drawable/ic_dot</item>
    </style>
</resources>
